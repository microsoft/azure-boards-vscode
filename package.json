{
  "name": "azure-boards-vs-code",
  "displayName": "azure-boards-vs-code",
  "description": "",
  "version": "0.0.1",
  "publisher": "cschleiden",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:work-items"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./build/extension/extension",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "azure-boards-container",
          "title": "Azure Boards",
          "icon": "media/azure-boards-logo.svg"
        }
      ]
    },
    "views": {
      "azure-boards-container": [
        {
          "id": "work-items",
          "name": "My work items"
        }
      ]
    },
    "commands": [
      {
        "command": "azure-boards.configuration.show",
        "title": "Configure Azure Boards"
      },
      {
        "command": "azure-boards.refresh-work-items",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "azure-boards.open-work-item",
        "title": "Open work item in Azure Boards"
      },
      {
        "command": "azure-boards.mention-work-item",
        "title": "Mention work item in commit message",
        "icon": {
          "light": "resources/light/stage.svg",
          "dark": "resources/dark/stage.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "azure-boards.refresh-work-items",
          "when": "view == work-items",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "azure-boards.open-work-item",
          "when": "view == work-items && viewItem == work-item"
        },
        {
          "command": "azure-boards.mention-work-item",
          "when": "view == work-items && viewItem == work-item",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Azure Boards",
      "properties": {
        "azure-boards.account": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "default": ""
            },
            "id": {
              "type": "string",
              "default": ""
            },
            "scopes": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "avatarUrl": {
              "type": "string",
              "default": ""
            },
            "baseUrlSuffix": {
              "type": "string",
              "default": "atlassian.net"
            }
          },
          "description": "Jira site for workspace",
          "scope": "resource"
        },
        "azure-boards.project": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "default": ""
            },
            "id": {
              "type": "string",
              "default": ""
            },
            "key": {
              "type": "string",
              "default": ""
            }
          },
          "description": "Jira project for workspace",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "react-scripts-ts build && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.4",
    "tslint": "5.14.0",
    "typescript": "3.3.4000",
    "vscode": "1.1.30"
  },
  "dependencies": {
    "azure-devops-node-api": "^7.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts-ts": "^3.1.0"
  }
}
